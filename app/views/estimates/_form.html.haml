= form_for @estimate do |f|
  - if @estimate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@estimate.errors.count, "error")} prohibited this estimate from being saved:"
      %ul
        - @estimate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :e_type
    = f.check_box :e_type
  .field
    = f.label :recall
    = f.text_field :recall
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
